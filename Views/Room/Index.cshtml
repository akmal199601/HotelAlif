@model List<HotelAlif.Models.Room>
@{
    ViewData["Title"] = "Room";
}
<table class="table table-bordered">
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>#</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Room" asp-route-id="@x.Id">Edit</a>
                    <a asp-action="Delete" asp-controller="Room" asp-route-id="@x.Id"
                    onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>